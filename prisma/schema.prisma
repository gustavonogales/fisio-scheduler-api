generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model UserType {
  id   String @id @default(uuid())
  type String

  User User[]
  @@map("user_types")
}

model User {
  id         String   @id @default(uuid())
  email      String   @unique
  name       String
  password   String
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt
  userType   UserType @relation(fields: [userTypeId], references: [id])
  userTypeId String

  userAppointments         Appointment[] @relation("clientUser")
  professionalAppointments Appointment[] @relation("professionalUser")
  @@map("users")
}

model Appointment {
  id           String   @id @default(uuid())
  startTime    DateTime
  endTime      DateTime
  client       User     @relation("clientUser", fields: clientId, references: id)
  professional User     @relation("professionalUser", fields: professionalId, references: [id])
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt


  clientId       String
  professionalId String
  @@map("appointments")
}
